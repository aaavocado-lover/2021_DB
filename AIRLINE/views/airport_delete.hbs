<h1>{{ Airport 삭제 }}</h1>
<table>
    <tr>
        <td>Airport_code</td>
        <td>Name</td>
        <td>City</td>
        <td>State</td>
    </tr>

    {{#each Airport}}
        <form method="post">
            <tr>
                <td>{{Airport_code}}</td>
                <td>{{Name}}</td>
                <td>{{City}}</td>
                <td>{{State}}</td>
                <td style="border:none; margin-left: 10px;">
                    <button
                        style="margin-left: 10px;"
                        type="submit"
                        name="delBtn"
                        value={{Airport_number}}
                        formaction="/airport_delete">
                        삭제
                        </button>
                </td>
            </tr>
        </form>
    {{/each}}
</table>